# gtk
set $gnome-schema org.gnome.desktop.interface

exec_always {
  gsettings set $gnome-schema gtk-theme Nordic
  gsettings set $gnome-schema gtk-application-prefer-dark-theme true
  gsettings set $gnome-schema icon-theme Papirus-Dark
  gsettings set $gnome-schema cursor-theme Adwaita
}

bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +10%
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -10%
bindsym --locked XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioMicMute exec pactl set-source-mute @DEFAULT_SOURCE@ toggle

bindsym $mod+End exec pactl set-sink-volume @DEFAULT_SINK@ +10% && notify-send "Volume" "$(pactl list sinks | grep 'Volume: front-left' | cut -d '/' -f 2 | tr -d '[:space:]')" -h string:x-canonical-private-synchronous:volume_percentage --app-name "System"
bindsym $mod+Home exec pactl set-sink-volume @DEFAULT_SINK@ -10% && notify-send "Volume" "$(pactl list sinks | grep 'Volume: front-left' | cut -d '/' -f 2 | tr -d '[:space:]')" -h string:x-canonical-private-synchronous:volume_percentage --app-name "System"
bindsym $mod+BackSpace exec pactl set-sink-mute @DEFAULT_SINK@ toggle  && notify-send "Volume" "$(pactl list sinks | grep 'Mute:' | awk '{if ($2 == "yes") print "no"; else print "yes"}')" -h string:x-canonical-private-synchronous:volume_status --app-name "System"

bindsym $mod+Delete exec brightnessctl s +10% > /dev/null && notify-send Brightness $(($(brightnessctl get) * 10 / 852 * 10))% -h string:x-canonical-private-synchronous:brightness_percentage --app-name System
bindsym $mod+Insert exec brightnessctl s 10%- > /dev/null && notify-send Brightness $(($(brightnessctl get) * 10 / 852 * 10))% -h string:x-canonical-private-synchronous:brightness_percentage --app-name System

